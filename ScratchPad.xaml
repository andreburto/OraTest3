<Window x:Class="OraTest3.ScratchPad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScratchPad" Height="400" Width="480" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" MaxWidth="480" MaxHeight="400" MinWidth="480" MinHeight="400">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="0" Name="stackPanel1" VerticalAlignment="Stretch">
            <TextBox Height="100" Name="txtScratch" VerticalAlignment="Top" AcceptsReturn="True" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Auto" Padding="2" Margin="1,1,0,0" ToolTip="Only accepts SELECT queries" />
            <Button Content="EXECUTE QUERY" Height="25" Name="btnExecute" Margin="5" Click="btnExecute_Click" />
            <DataGrid AutoGenerateColumns="True" Height="225" Name="dgScratch" Width="Auto" MinHeight="185" VerticalAlignment="Bottom" Margin="1,1,0,0" />
        </StackPanel>
    </Grid>
</Window>
